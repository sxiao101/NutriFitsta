<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.FitnessComposeFragment">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/ivPostImage"
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="1dp"
                tools:src="@tools:sample/avatars" />

            <TextView
                android:id="@+id/tvPicture"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ivPostImage"
                android:layout_alignParentStart="true"
                android:layout_marginStart="85dp"
                android:layout_marginTop="5dp"
                android:text="Take picture"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <ImageButton
                android:id="@+id/ibCamera"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ivPostImage"
                android:layout_marginStart="30dp"
                android:layout_marginTop="2dp"
                android:layout_toEndOf="@+id/tvPicture"
                android:src="@drawable/ic_baseline_camera_alt_24" />

            <TextView
                android:id="@+id/tvType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvPicture"
                android:layout_alignEnd="@id/tvPicture"
                android:layout_alignParentStart="false"
                android:layout_marginStart="0dp"
                android:layout_marginTop="40dp"
                android:text="Type"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <Spinner
                android:id="@+id/spinner"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_below="@+id/ivPostImage"
                android:layout_alignStart="@id/ibCamera"
                android:layout_marginStart="10dp"
                android:layout_marginTop="68dp"
                android:layout_toEndOf="@+id/tvType" />

            <EditText
                android:id="@+id/etLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvType"
                android:layout_alignParentStart="true"
                android:layout_marginStart="30dp"
                android:layout_marginTop="40dp"
                android:ems="10"
                android:hint="Add Location"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/etDuration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/etLocation"
                android:layout_alignParentStart="true"
                android:layout_marginStart="30dp"
                android:layout_marginTop="40dp"
                android:ems="10"
                android:hint="Duration (minutes)"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/etVideo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/etDuration"
                android:layout_alignParentStart="true"
                android:layout_marginStart="30dp"
                android:layout_marginTop="40dp"
                android:ems="10"
                android:hint="Link to Workout" />

            <EditText
                android:id="@+id/etDescription"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/etVideo"
                android:layout_alignParentStart="true"
                android:layout_marginStart="30dp"
                android:layout_marginTop="40dp"
                android:background="@drawable/shape"
                android:ems="10"
                android:gravity="start|top"
                android:hint="Add Description"
                android:inputType="textMultiLine"
                android:minHeight="150dp" />


            <Button
                android:id="@+id/btnPost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/etDescription"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="33dp"
                android:layout_marginBottom="10dp"
                android:backgroundTint="#93E9BE"
                android:text="post"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/btnList"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/etVideo"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/etVideo"
                android:text="Add exercises" />

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>